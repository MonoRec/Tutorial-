{% extends 'base.html.twig' %}

{% block title %} All genuses{% endblock %}

{% block body %}

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Genuses</th>
            <th># of species</th>
            <th>Last update</th>
        </tr>
        </thead>
        <tbody>
        {% for  genus in genuses %}
            <tr>
                <td>
                    <a href="{{ path('genus_show', {
                        'genusName' : genus.name
                    }
                    ) }}"> {{ genus.name }}</a>
                </td>
                <td> {{ genus.speciesCount }}</td>
                <td> {{ genus.updatedAt|date('Y-m-d') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}